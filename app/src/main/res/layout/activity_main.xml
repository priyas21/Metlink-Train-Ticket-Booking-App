<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nz.ac.app.metlink.MainActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:id="@+id/imageLogo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="70dp"
        android:src="@drawable/logo1"
        android:paddingTop="2dp"
        android:paddingBottom="100dp"
        android:layout_marginRight="100dp"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/star"
        android:paddingRight="55dp"
        android:id="@+id/imageView9" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/thumbsup"
        android:layout_marginLeft="30dp"
        android:id="@+id/imageView5"
        android:onClick="thumbsupClick"/>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageTrain"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="145dp"
        android:src="@drawable/train"

        />
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageTrain"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp"
        android:textSize="20dp"
        android:id="@+id/TimeTable"
        android:text="Train Timetables"
        android:textColor="@color/colorPrimaryText"/>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ImgBookTicket"
        android:layout_below="@+id/imageTrain"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/bookticket"
        android:onClick="bookTicketClicked"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ImgBookTicket"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:id="@+id/BookTicket"
        android:text="Book Ticket"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="Comic Sans"
        android:onClick="bookTicketClicked"
        />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ImgPlan"
        android:layout_below="@+id/ImgBookTicket"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/plan"
        android:onClick="planJourneyClicked"
        />
    <TextView
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_below="@+id/ImgPlan"
        android:layout_marginTop="5dp"        
        android:textSize="20sp"
        android:id="@+id/CancelledTrain"
        android:text="Plan Journey"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="Comic Sans"
        android:onClick="planJourneyClicked"/>






    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/imageLogin"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-25dp"

        android:layout_marginLeft="250dp"
        android:layout_below="@+id/imageLogo"

        />
    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageLogin"
        android:textSize="20sp"
        android:id="@+id/Login"
        android:text="Log In"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="Comic Sans"
        android:onClick="LoginOnClick"
        android:gravity="center"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imgFareEnquiry"
        android:layout_below="@+id/imageLogin"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/fare"
        android:onClick="FareEnquiryCLicked"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imgFareEnquiry"
        android:textSize="20sp"
        android:id="@+id/FareEnquiry"
        android:text="Fare Enquiry"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="Comic Sans"
        android:gravity="center"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/imageTicketStatus"
        android:layout_below="@+id/imgFareEnquiry"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/trainticket"
        android:onClick="ViewTicket"
        />
    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imageTicketStatus"
        android:textSize="20sp"
        android:id="@+id/TicketStatus"
        android:text="View Ticket"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="Comic Sans"
        android:onClick="ViewTicket"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewLogout"
        android:onClick="MyLogoutClicked"
    />

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textLogout"
        android:textColor="@color/colorPrimaryText"
        android:layout_below="@+id/imageViewLogout"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="-1dp"
        android:onClick="MyLogoutClicked"
        android:layout_marginTop="5dp"
        />

</RelativeLayout>
