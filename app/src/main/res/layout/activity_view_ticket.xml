<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nz.ac.app.metlink.ViewTicket"
    android:stretchColumns="1"
    android:id="@+id/r1"
    android:background="@color/colorPrimary">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/home"
        android:id="@+id/homeimg"
        android:onClick="homeClicked"
        android:layout_marginRight="280dp"

        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/imageLogo"
        android:layout_marginLeft="-30dp"
        android:src="@drawable/logo1"

        />
    <TextView
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:text="View Your Tickets"
        android:id="@+id/textViewTicket"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/homeimg"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Ticket Num|"
        android:textSize="15sp"
        android:paddingRight="5dip"
        android:id="@+id/ticketNum"
        android:layout_below="@+id/textViewTicket"
        android:textColor="@color/colorWhite"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Ticket|"
        android:textSize="15sp"
        android:paddingRight="5dip"
        android:layout_below="@+id/textViewTicket"
        android:layout_marginLeft="80dp"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Purchase Date|"
        android:textSize="15sp"
        android:paddingRight="5dip"
        android:layout_below="@+id/textViewTicket"
        android:layout_marginLeft="125dp"
        android:textColor="@color/colorWhite"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Expiry Date|"
        android:textSize="15sp"
        android:paddingRight="5dip"
        android:layout_below="@+id/textViewTicket"
        android:layout_marginLeft="225dp"
        android:textColor="@color/colorWhite"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Fare"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:layout_below="@+id/textViewTicket"
        android:layout_marginLeft="310dp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:padding="10dp"
        android:id="@+id/TableLayoutTicket"
        android:background="#ADBBBD"
        android:shrinkColumns="*">




    </TableLayout>
    </ScrollView>







</RelativeLayout>
