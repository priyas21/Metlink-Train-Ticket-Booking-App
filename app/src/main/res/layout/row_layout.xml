<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="75dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TicketNum"
        android:id="@+id/textViewTicketNum"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:id="@+id/textViewTicketType"
        android:layout_alignTop="@+id/textViewTicketNum"
        android:layout_toEndOf="@+id/textViewTicketNum" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PurchaseDate"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textViewTicketType" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiry"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fare"
        android:id="@+id/textViewFare"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView" />
</RelativeLayout>