<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nz.ac.app.metlink.My_Profile">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home"
        android:id="@+id/homeimg"
        android:onClick="homeClicked"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/admin"
        android:id="@+id/user_image"
        android:layout_marginTop="145dp"
        />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="160dp"
        android:id="@+id/imageLogo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="55dp"
        android:src="@drawable/logo1"
        android:paddingTop="2dp"
        android:paddingBottom="100dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Account"
        android:id="@+id/textViewReq"
        android:paddingLeft="45dp"
        android:layout_below="@+id/homeimg"
        android:layout_toEndOf="@+id/homeimg"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryText"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@+id/imageLogin"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-156dp"
        android:layout_marginLeft="260dp"
        android:src="@drawable/login"
        android:layout_below="@+id/imageLogo"
        android:onClick="LogoutOnClick"
        />
    <TextView
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/imageLogin"
        android:textSize="15sp"
        android:id="@+id/Logout"
        android:text="Log Out"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="Comic Sans"
        android:onClick="LogoutOnClick"/>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Mobile Num"
        android:id="@+id/buttonMobileChg"
        android:onClick="buttonUpdateClicked"
        android:layout_alignTop="@+id/editTextMobile"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewEmail"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mobile Phone"
        android:id="@+id/textViewMobile"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/user_image" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Password"
        android:id="@+id/buttonPassChg"
        android:onClick="buttonUpdatePassClicked"
        android:layout_alignTop="@+id/editTextMobile"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/buttonMobileChg"
        android:layout_marginTop="40dp"
        android:layout_alignStart="@+id/buttonMobileChg" />




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivimage"
        android:layout_above="@+id/buttonMobileChg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/textViewName"
        android:layout_alignTop="@+id/user_image"
        android:layout_toEndOf="@+id/textViewMobile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email"
        android:id="@+id/textViewEmail"
        android:layout_alignBottom="@+id/user_image"
        android:layout_toStartOf="@+id/buttonMobileChg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_toLeftOf="@+id/textViewMobile"
        android:layout_below="@+id/user_image"
        android:layout_marginTop="45dp"
        android:src="@drawable/mobile"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView10"
        android:src="@drawable/password"
        android:layout_alignTop="@+id/buttonPassChg"
        android:layout_toStartOf="@+id/textViewReq" />


</RelativeLayout>
