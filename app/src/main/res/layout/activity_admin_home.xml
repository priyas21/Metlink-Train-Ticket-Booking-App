<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nz.ac.app.metlink.AdminHome">
    <ImageView
        android:layout_width="280dp"
        android:layout_height="160dp"
        android:id="@+id/imageLogo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="18dp"
        android:src="@drawable/logo1"
        android:paddingTop="2dp"
        android:paddingBottom="100dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/star"
        android:paddingRight="55dp"
        android:id="@+id/imageView7" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/thumbsup"
        android:layout_marginLeft="30dp"
        android:id="@+id/imageView5" />


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageTrain"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/train"

        />
    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageTrain"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:id="@+id/TimeTable"
        android:text="Insert/Update Train Timetables"
        android:textColor="@color/colorPrimaryText"/>



    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ImgPassengers"
        android:layout_below="@+id/imageTrain"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/login"
        android:onClick="ViewPassengersClicked"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ImgPassengers"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:id="@+id/CancelledTrain"
        android:text="View Passengers"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="Comic Sans"
        android:onClick="ViewPassengersClicked"/>





    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imgFareEnquiry"
        android:layout_below="@+id/imageLogin"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="143dp"
        android:layout_marginLeft="250dp"
        android:src="@drawable/fare"
        android:onClick="insertFare"
        />
    <TextView
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imgFareEnquiry"
        android:textSize="20sp"
        android:id="@+id/FareEnquiry"
        android:text="Insert/Update Travel Fare"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="Comic Sans"
        android:onClick="insertFare"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewAdminLogout"
        android:src="@drawable/logout"
        android:layout_marginLeft="-9dp"
        android:layout_alignTop="@+id/ImgPassengers"
        android:layout_alignStart="@+id/imageView7"
        android:layout_below="@+id/imgFareEnquiry"

         />
        <!--android:onClick="adminOnClick"/>-->
    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="198dp"
        android:layout_below="@+id/imgFareEnquiry"
        android:textSize="20sp"
        android:id="@+id/AdminLogout"
        android:text="Log Out"
        android:textColor="@color/colorPrimaryText"
        android:fontFamily="Comic Sans"/>



</RelativeLayout>
